        <f:Card class="Bruh" width="350px" height="450px" headerPosition="Top">
            <f:header>
                <card:Header title="Monza" subtitle="Il tempio della velocita'" />
            </f:header>
            <f:content>
                <VBox class="sapUiSmallMargin" justifyContent="Center">
                    <HBox justifyContent="Center">
                        <items>
                            <Image src="Mnz-map-4.png" width="200px" />
                        </items>
                    </HBox>

                    <HBox justifyContent="Start">
                        <items>
                            <Text text="Lunghezza:5793 metri." />
                        </items>
                    </HBox>
                    <HBox justifyContent="Start">
                        <items>
                            <Text text="_______________________________________" />
                        </items>
                    </HBox>
                    <HBox justifyContent="Start">
                        <items>
                            <Text wrapping="true" text="Velocita Massima nel 2005 uguale a 370,1 km/h stabilito da Kimi Raikkonen." />
                        </items>
                    </HBox>
                    <HBox justifyContent="Start">
                        <items>
                            <Text text="_______________________________________" />
                        </items>
                    </HBox>
                    <HBox justifyContent="Start">
                        <items>
                            <Text wrapping="true" text="Curve: 11." />
                        </items>
                    </HBox>
                    <HBox justifyContent="Start">
                        <items>
                            <Text text="_______________________________________" />
                        </items>
                    </HBox>
                    <HBox justifyContent="Start">
                        <items>
                            <Text text="Record Tempo sul giro in qualifica : 1'18'887 con una velocita media di 264,362, stabilito da Lewis Hamilton nel 2020." />
                        </items>
                    </HBox>
                    <HBox justifyContent="Start">
                        <items>
                            <Text text="_______________________________________" />
                        </items>
                    </HBox>
                    <HBox justifyContent="Start">
                        <items>
                            <Text text="Mentre il giro veloce in gara e stato stabilito da Rubens Barrichello nel 2004 con un tempo di 1'21'046." />
                        </items>
                    </HBox>
                </VBox>
            </f:content>
        </f:Card>
        <footer>
            <Bar design="Footer">
                <contentMiddle>
                    <Link text="Click Here to see the track map" href="https://upload.wikimedia.org/wikipedia/commons/thumb/8/8d/Monza_Map-2021.png/1200px-Monza_Map-2021.png" />
                </contentMiddle>
            </Bar>
        </footer>

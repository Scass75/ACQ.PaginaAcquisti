<mvc:View controllerName="ACQ.PaginaAcquisti.controller.Main" height="100%" displayBlock="false" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:card="sap.f.cards" xmlns:f="sap.f">
    <Page id="login" showHeader="false" class="img">
        <!-- <f:SidePanel id="mySidePanel" toggle="onToggle">
